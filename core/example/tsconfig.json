{
    "compilerOptions": {
        // required
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "noLib": true,
        "strict": true,
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "Node",
        "typeRoots": [
            "../../node_modules/@rbxts"
        ],
        "removeComments": true,

        "rootDirs": [
            "server",
            "../lib",
        ],

        "outDir": "build",
        "baseUrl": ".",

        "paths": {
            "@cmd-core": ["../lib"],
            "@cmd-core/*": ["../lib/*"]
        }
    },
    "include": [
        "**/*",
        "../lib/**/*"
    ]
}