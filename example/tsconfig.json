{
    "compilerOptions": {
        // required
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "noLib": true,
        "strict": true,
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "Node",
        "typeRoots": [
            "../node_modules/@rbxts"
        ],
        "removeComments": true,

        "rootDirs": [
            "server",
            "client",
            "../lib",
        ],

        "outDir": "build",
        "baseUrl": "../lib",

        "paths": {
            "@zirconium": ["../lib"],
            "@zirconium/*": ["../lib/*"]
        },
        "jsx": "react",
        "jsxFactory": "Roact.createElement"
    },
    "include": [
        "**/*",
        "../lib/**/*"
    ]
}