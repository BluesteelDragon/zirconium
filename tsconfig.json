{
	"compilerOptions": {
		"target": "ESNext",
		"jsx": "react",
		"jsxFactory": "Roact.createElement",
		"noLib": true,
		"baseUrl": "lib",
		"rootDir": "lib",
		"module": "commonjs",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"typeRoots": ["node_modules/@rbxts"],
		"strict": true,
		"declaration": true,
		"downlevelIteration": true,
		"outDir": "out",
		"stripInternal": true,
		"allowSyntheticDefaultImports": true,
		"plugins": [
			{
				"transform": "rbxts-transform-debug",
				"verbose": true,
				"enabled": true,
				"environmentRequires": {
					"NODE_ENV": "development"
				}
			}
		]
	},
	"exclude": [
		"eslint.config.ts",
		"example/**/*",
		"out"
	]
}
